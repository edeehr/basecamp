{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-97785bed",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "basecamp_ami {{timestamp | clean_ami_name}}"
  }],
   "provisioners": [
    {
      "type":"file",
      "source": "index.html",
      "destination": "/tmp/index.html"
    },    

    {
      "type": "shell",
      "scripts": [
        "install.sh"
      ]
    }
  ]
}
